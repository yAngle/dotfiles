// To get the key names, run "xkbcomp $DISPLAY /tmp/z.xkb"

// Layout fix for Microsoft Sculpt Ergonomic

partial alphanumeric_keys
xkb_symbols "sculpt" {
    # remap Home-End-PgUp-PgDn to Home-PgUp-PgDn-End
    key <PGUP> {         [            Next ] };
    key  <END> {         [           Prior ] };
    key <PGDN> {         [             End ] };

    # "Windows" button on the Sculpt mouse
    key <RWIN> {         [     XF86Forward ] };
};
