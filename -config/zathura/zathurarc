# see zathurarc man page for details
set guioptions "sv"
set adjust-open "width"
set incremental-search true
set window-title-basename true
set scroll-step 100
set scroll-full-overlap 0.1
set first-page-column "1:1"

set selection-clipboard "clipboard"

set recolor true
set recolor-keephue true
set recolor-darkcolor "#000000"
set recolor-lightcolor "#EEE8D5"

set inputbar-fg "#000000" # default light-green is unusable
set inputbar-bg "#FFFFFF"

set highlight-active-color "rgba(13, 255, 0, 0.7)"
set highlight-color "rgba(237, 81, 208, 0.7)"

set render-loading false
set render-loading-bg "#000000"

map <C-w> quit
