# see zathurarc man page for details
set guioptions "sv"
set adjust-open "width"
set incremental-search true
set window-title-basename true
set scroll-step 100
set scroll-full-overlap 0.1

set selection-clipboard "clipboard"

# darker background (switch by Ctrl-R)
set recolor-keephue true
set recolor-darkcolor "#000000"
set recolor-lightcolor "#CCCCCC"

set inputbar-fg "#000000" # default light-green is unusable
set inputbar-bg "#FFFFFF"

set highlight-active-color "#0DFF00"
set highlight-color "#ED51D0"
set highlight-transparency 0.7

map <C-w> quit
