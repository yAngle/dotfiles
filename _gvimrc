" laptop
if hostname() == 'orbifold'
    "set background=light
    set guifont=Monospace\ 12
    "colorscheme default
    "set mouse=
else
    set guifont=Monospace\ 11
endif

" hide toolbar/menu
set guioptions-=m  "remove menu bar
set guioptions-=M  "a more extreme version, which does not source the menu script 
set guioptions-=T  "remove toolbar

" cut/copy/paste using system clipboard
vmap <C-X> "+d
vmap <C-C> "+y
" set an undo point before pasting: https://unix.stackexchange.com/a/117409
imap <C-V> <C-G>u<Esc>"+gpa

