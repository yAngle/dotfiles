    path = ~/.gitconfig-whoami
[color]
    ui=auto
[color "branch"]
    current = blue reverse
    local = red
    remote = green
[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[core]
    excludesfile = ~/.gitignore
    editor = vim
[push]
    default = upstream
[grep]
    lineNumber = true
